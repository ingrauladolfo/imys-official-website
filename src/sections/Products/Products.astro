---
import productsData from "@/assets/data/sections/Products/productsData";
import type { ProductsDataInfo } from "@/assets/ts/ProductsDataInfo";

const products: ProductsDataInfo[] = productsData;
---

<section id="products" class="py-8">
  <div class="container mx-auto">
    <!-- Título y texto -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center justify-center opacity-75"
    >
      <div>
        <h2 class="text-3xl font-bold ml-10 text-center md:text-left">
          Modelos <br /> disponibles
        </h2>
      </div>
      <div>
        <p class="text-2xl ml-14 text-center md:text-left">
          Entrega inmediata el mismo día para más información envíanos un
          mensaje y con gusto te atenderemos
        </p>
      </div>
    </div>
    <!-- Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
      {
        products.map(
          ({
            modelCharacteristic,
            modelImg,
            modelImgAlt,
            modelMessage,
            modelName,
            modelPrice,
          }) => (
            <div
              class="flex items-center justify-center align-middle"
              style="background:#d9e3e4 0% 0% no-repeat padding-box; box-shadow:0px 3px 30px #00000029; border-radius:75px;"
            >
              <div class="p-4">
                <h2 class="text-[50px] text-left font-semibold mb-2 mt-6 ml-6">
                  {modelName}
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-center justify-center mt-3 ml-6">
                  <div>
                    <h3 class="text-lg font-semibold text-center md:text-left">
                      {modelCharacteristic}
                    </h3>
                  </div>
                  <div>
                    <p class="text-sm text-center md:text-left">
                      {modelPrice}{" "}
                    </p>
                  </div>
                  <div class="flex items-center justify-center">
                    <img
                      src={modelImg}
                      alt={modelImgAlt}
                      class="w-full h-auto object-cover"
                    />
                  </div>
                </div>

                <div class="text-center mt-4">
                  <a
                    href=`https://wa.me/5218331935879?text=Me%20interesa%20comprar%20ahora%20el%20modelo%20${modelName}%20de%20${modelCharacteristic}`
                    target="_blank"
                    style="background:#1DAA63 0% 0% no-repeat padding-box; box-shadow:0px 3px 10px #00000029; border-radius:50px;"
                    class="inline-block px-8 py-4 text-white font-semibold rounded-full"
                  >
                    Ordenar ahora
                  </a>
                  <p class="mt-2">{modelMessage}</p>
                </div>
              </div>
            </div>
          )
        )
      }
    </div>
  </div>
</section>
